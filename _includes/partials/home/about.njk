<div class="container" id="{{about.section}}">
<div class="row mt-5 mb-5">
<div class="col-md-4 p-3 p-md-5 rounded"
     style="
        background-image: url('{{about.image}}');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        min-height: 200px;
     ">
</div>
<div class="col-md-8 p-3 p-md-5 ">
<h2 class="sh-text"><strong><a href="{{metadata.url}}" class="none">{{about.title}}</a></strong></h2>
<h3><strong>{{about.description}}</strong></h3>
{{about.text| markdownify |safe}}
<p>
<a href="{{about.button.url}}" class="btn btn-ungu">{{about.button.text}}</a>
</p>
</div>
</div>
</div>
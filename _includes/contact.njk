<!doctype html>
<html lang="{{ metadata.language }}">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% include "partials/seo.njk" %}
<style>{% include "css/bs.css" %}</style>
<style>{% include "css/main.css" %}</style>
<style>{% getBundle "css" %}</style>
</head>
<body>
<a href="#main" id="skip-link" class="visually-hidden">Skip to main content</a>
{% include "partials/nav.njk" %}
{% include "partials/header.njk" %}
<div id="main" class="container p-3">
<div class="col-md-10 mx-auto row">
<div class="col-md-12 p-3 p-md-5">
{{content|safe}}
</div>
<div class="col-md-12 p-3 p-md-5">
<a href="{{map.url}}"><img class="img-fluid header-cover" 
width="100%" height="100%"
alt="{{map.title}}" 
src="{{map.image}}"/></a>
</div>
<div class="col-md-5 p-3 p-md-5">
<div class="mb-3">
<h4>{{metadata.contact.address.title}}</h4>
<p><i class="{{metadata.contact.address.icon}} me-2"></i>
    {{metadata.contact.address.text}}
</p>
</div>
<div class="mt-5">
<h4>{{metadata.contact.phone.title}}</h4>
<p><i class="{{metadata.contact.phone.icon}} me-2"></i>
<a href="{{metadata.contact.phone.url}}">{{metadata.contact.phone.text}}</a>
</p>
</div>
<div class="mt-5">
<h4>{{metadata.contact.email.title}}</h4>
<p><i class="{{metadata.contact.email.icon}} me-2"></i>
<a href="mailto:{{metadata.contact.email.text}}">{{metadata.contact.email.text}}</a>
</p>
</div>
<div class="mt-5">
<h4>{{metadata.social.title}}</h4>
<p>{% for s in metadata.social.list %}
<a href="{{s.url}}" class="me-2 btn btn-ungu mt-1 mb-1"><i class="{{s.icon}} me-3"></i><small>{{s.title}}</small></a>
{% endfor %}
</p>
</div>
</div>
<div class="col-md-2"></div>
<div class="col-md-5 p-3 p-md-5">
<h3>{{form_title}}</h3>
<form action="{{metadata.formspree_id}}" method="post">
<div class="mt-3 mb-3">
  <label for="name"><i class="{{metadata.reservation.form.name.icon}} me-2"></i>{{metadata.reservation.form.name.title}}</label>
  <input name="Name" class="form-control" id="contact_name" type="text">
  </div>
<div class="mt-3 mb-3">
  <label for="phone" ><i class="{{metadata.reservation.form.phone.icon}} me-2"></i>{{metadata.reservation.form.phone.title}}</label>
  <input name="Phone" class="form-control" id="contact_phone" type="string">
  </div>
<div class="mt-3 mb-3">
  <label for="email" ><i class="{{metadata.reservation.form.email.icon}} me-2"></i>{{metadata.reservation.form.email.title}}</label>
  <input name="Email" class="form-control" id="contact_email" type="email">
  </div>
<div class="mt-3 mb-3">
  <label for="note" ><i class="{{metadata.reservation.form.notes.icon}} me-2"></i>{{metadata.reservation.form.notes.title}}</label>
  <textarea name="note" rows="3"  class="form-control" id="contact_note"></textarea>
  </div>
  <button type="submit" class="btn btn-dark btn-lg">{{button}}</button>
</form>
</div>

</div>
</div>
{% include "partials/footer.njk" %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="/js/bs.js"></script>
</body>
</html>